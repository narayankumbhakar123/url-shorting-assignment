<h1>Create a New Shortened URL</h1>

<%= form_with model: @url, local: true do |form| %>
  <div>
    <%= form.label :original_url %>
    <%= form.text_field :original_url, required: true %>
  </div>
  <div>
    <%= form.submit 'Shorten URL', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Back to Index', root_path, class: 'btn btn-secondary' %>
